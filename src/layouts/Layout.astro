---
import Header from '../components/Header.astro';

const { titre } = Astro.props;
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title> {titre} </title>
    </head>
    <body>
        <Header/>
        <main>
            <slot />
        </main>
    </body>

    <footer>
		<p>Voici mon footer</p>
	</footer>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
        font-family: Arial, sans-serif;
	}
    footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 1rem;
        position: fixed;
        bottom: 0;
        width: 100%;
    }
</style>

</html>


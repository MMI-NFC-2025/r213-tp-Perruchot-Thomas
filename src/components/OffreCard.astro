---
import PbImage from './PbImage.astro';
const { offre } = Astro.props;
---

<div class="bg-white shadow-md rounded-xl overflow-hidden border border-slate-200 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 relative group">
    
    {offre.favori && (
        <span class="absolute top-2 right-2 z-10 bg-white/90 text-pink-500 px-2 py-1 rounded-full text-sm font-bold shadow-sm">
            â˜… Favori
        </span>
    )}

    <div class="grid grid-cols-3 gap-0.5 w-full aspect-video bg-slate-100 overflow-hidden">
        <PbImage 
            record={offre} 
            recordImage={offre.images[0]} 
            class="w-full h-full object-cover shadow-sm col-span-2" 
        />
        <div class="grid grid-rows-2 gap-0.5 h-full">
            <PbImage 
                record={offre} 
                recordImage={offre.images[1]} 
                class="w-full h-full object-cover shadow-sm" 
            />
            <PbImage 
                record={offre} 
                recordImage={offre.images[2]} 
                class="w-full h-full object-cover shadow-sm" 
            />
        </div>
    </div>
    
    <div class="p-4 text-center">
        <h2 class="text-lg font-bold text-slate-800 tracking-wide group-hover:text-indigo-600 transition-colors">
            {offre.nom_maison}
        </h2>
    </div>
    <a href={`/offres/${offre.id}`} class="block text-center text-indigo-600 hover:text-indigo-800 font-medium py-2 transition-colors">
        Voir plus
    </a>
</div>


 
---
import { getImageUrl } from '../js/backend.mjs';
import { Image } from "astro:assets";

const {
  record,
  recordImage,
  width = 400,   
  height = 300, 
  class: className, 
} = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
---

{imageURL && 
    <Image
        src={imageURL}
        alt={record.nom_maison || 'Image de la maison'}
        width={width}
        height={height}
        class={className}
    />
}